{
  "compilerOptions": {
    "jsx": "react",
    "module": "commonjs",
    "rootDir": "build/tsx",
    "outDir": "./dist/react/",
    "allowJs": true,
    "target": "es6",
    "moduleResolution": "node",
    "types": ["node"],
    "declaration": true,
    "esModuleInterop": true
  },
  "include": ["build/tsx/**/*.tsx", "build/tsx/**/*.ts"],
  "exclude": ["node_modules", "<node_internals>/**", "built"]
}
