{
  "compilerOptions": {
    "jsx": "react",
    "module": "commonjs",
    "rootDir": "dist/tsx",
    "outDir": "./dist/js/",
    "allowJs": true,
    "target": "es6",
    "moduleResolution": "node",
    "types": ["node"],
    "declaration": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/types",
    "dist/tsx/**/*.tsx",
    "dist/tsx/**/*.ts",
    "build/tsx/**/*.ts"
  ],
  "exclude": ["node_modules", "<node_internals>/**", "built"]
}
