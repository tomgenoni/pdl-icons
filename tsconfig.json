{
  "compilerOptions": {
    "jsx": "react",
    "module": "commonjs",
    "rootDir": "dist/typescript",
    "outDir": "./dist/javascript/",
    "allowJs": true,
    "target": "es6",
    "moduleResolution": "node",
    "types": ["node"],
    "declaration": true,
    "esModuleInterop": true
  },
  "include": ["dist/typescript/**/*.tsx", "build/typescript/**/*.ts"],
  "exclude": ["node_modules", "<node_internals>/**", "built"]
}
